<h1 class="title">Users Directory</h1>
{{#if message}}
<article class="message is-danger">
  <div class="message-body">
    {{message}}
  </div>
</article>
{{/if}}

{{#if users}}
<ul>
  {{#each users as | user |}}
  <li>
    <a href="/users/{{user._id}}/">
      {{user.name}}
      <span class="tag is-info">
        {{user.role}}
      </span>
    </a>
  </li>
  {{/each}}
</ul>
{{else}}
<p>
  Boss, hasn't add any users yet.
</p>
{{/if}}