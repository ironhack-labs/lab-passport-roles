<h1><%= title %></h1>

<form id="form" action="/signup" method="POST">

  <label for="username">Username</label><br>
  <input type="text" name="username"  placeholder="AnakinSkywalker">
  <br><br>

  <label for="name">Name</label><br>
  <input type="text" name="name"  placeholder="Chiquito">
  <br><br>

  <label for="familyName">Family Name</label><br>
  <input type="text" name="familyName"  placeholder="de la Calzada">
  <br><br>

  <label for="password">Password</label><br>
  <input type="password" name="password" placeholder="DeathStar">
  <br><br>

  <% if (typeof(errorMessage) != "undefined") { %>
    <div class="error-message"><%= errorMessage %></div>
  <% } %>

  <button>Create account</button>
</form>
