<h2>Create new Employee</h2>

<form action="/employees/view" method="POST">

  <div>
  <label for="username">Enter New Employee Username</label>
  <input type="text" name="username" id="username" placeholder="Enter username here...">
  </div>

  <div>
  <label for="password">Enter New Employee Password</label>
  <input type="password" name="password" id="password" placeholder="Enter password here...">
  </div>

  <div>
  <label for="name">Enter New Employee Name</label>
  <input type="text" name="name" id="name" placeholder="Enter name here...">
  </div>

  <div>
  <label for="familyName">Enter New Employee Family Name</label>
  <input type="text" name="familyName" id="familyName" placeholder="Enter family name here...">
  </div>

  <div>
  <label for="role">Select New Employee Role</label>
    <select name="role" id="role">
      <option value="BOSS">Boss</option>
      <option value="DEVELOPER">Developer</option>
      <option value="TA">TA</option>
    </select>
  </div>

  <button type="submit">Submit</button>

</form>
<p>
  <a href="/private">Return to dashboard</a>
</p>
