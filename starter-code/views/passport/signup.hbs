<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container" class="form-container">
  <div class="form-group">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow" class="form-control"></div>
  <div class="form-group">
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password" class="form-control"> </div>
  {{!-- <br><br>
  <label for="role">GUEST</label>
  <input id="role" type="role" name="role" placeholder="Your role"> --}}

  {{#if message}}
    <div class="error-message p-3 mb-2 bg-danger text-white" >{{ message }}</div>
  {{/if}}
  <br><br>

  <button class="btn  btn-success">Create account</button>

  <p class="account-message mt-3">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>


{{#each movies}}
  <h3>{{username}}</h3> 
  <h4>{{this.role}}</h4> 
  <p><a href="/users/{{_id}}">Show details</a></p>
  <p><a href="/users/{{_id}}/edit">Edit movie</a></p>
  <form action="/users/{{_id}}/delete" method="post">
    <button>Delete movie</button>
  </form> 
{{/each}}