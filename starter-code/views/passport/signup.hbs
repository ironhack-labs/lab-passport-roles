<h1>Alta de usuario</h1>

{{#if message}}
<div class="message">{{message}}</div>
{{/if}}
<br><br>

<form action="/signup" method="post">
  <label for="username">Nombre de usuário: </label>
  <input type="text" name="username" placeholder="Introduce la usuario">
  <br><br>
  <label for="password">Contraseña: </label>
  <input type="password" name="password" placeholder="Introduce la contraseña">
  <br>
  <br><label for="role">Rol: </label>
  <select name="role">
    <option value="Developer">Developer</option>
    <option value="TA">TA</option>
    <option value="Boss">Boss</option>
  </select>
  <br>
  <br>

  {{!-- <label for="role">Permisiones: </label>
  <input type="text" name="role" placeholder="Permisiones">
  <br>--}}
  <button type="submit">Enviar</button>
</form>