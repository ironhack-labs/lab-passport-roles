<form id="form" action="/boss" method="POST">
    <div class="form-group">
        <label for="username">
            <small>Username</small>
        </label>
        <br>
        <input class="form-control" type="text" name="username" placeholder="Username"> </div>
    <div class="form-group">
        <label for="username">
            <small>Name</small>
        </label>
        <br>
        <input class="form-control" type="text" name="name" placeholder="Name"> </div>
    <div class="form-group">
        <label for="username">
            <small>Family name</small>
        </label>
        <br>
        <input class="form-control" type="text" name="familyName" placeholder="Family name"> </div>
    <div class="form-group">
        <label for="password">
            <small>Password</small>
        </label>
        <br>
        <input class="form-control" type="password" name="password" placeholder="DeathStar"> </div>
    <div class="form-group">
        <label for="email">
            <small>Role</small>
        </label>
        <br>
        <!-- <input class="form-control" type="text" name="role" placeholder="Boss/Developer/TA"> </div> -->
        <select name="role">
            <option value="Developer">Developer</option>
            <option value="TA">TA</option>
        </select><br><br>
        <button class="btn btn-success">
            <small>Create account</small>
        </button>
</form>
<br>
<br>
<br>
<small>User listing</small>
<ul>
    <% users.forEach((u)=>{ %>
        <% if(u.role != 'Boss') { %>
            <li><small>Name: <%= u.name %> / Role: <%= u.role %></small> | <a href="/delete/<%= u._id%>"><small>Delete</small></a></li>
        <% } %>
    <% }) %>
</ul>
<a href="/">
    <small>go back</small>
</a>