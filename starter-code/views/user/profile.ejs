<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="page-header">
        <h1>My Profile:
          <small>Here you can edit your personal details.</small>
        </h1>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <form action="/update" method="POST">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=user.username%>" name="username" class="form-control" readonly="readonly" placeholder="User name">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=user.name%>" name="name" class="form-control" placeholder="Name">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="email" value="<%=user.email%>" name="email" class="form-control" placeholder="Email">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-envelope"></i>
            </span>
            <input type="text" value="<%=user.familyname%>" name="familyname" class="form-control" placeholder="Family Name">
          </div>
        </div>
        

        <div class="form-actions">
          <button type="submit" class="btn btn-block btn-primary">Update</button>
        </div>
      </form>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <hr>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
            <% if ((typeof(user) !== 'undefined')&&(user.role==='TA')) { %>
              <a href="/formCourses" class="btn btn-info">View Courses</a>
            <%}%>
          <a href="/show" class="btn btn-success">View Users</a>
          <a href="/logout" class="btn btn-danger">log out</a>
        </div>
      </div>
  </div>
</div>