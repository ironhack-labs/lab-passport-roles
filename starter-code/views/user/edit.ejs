<div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <% if (typeof(flash) !== 'undefined' && flash.info) { %>
        <div class="alert alert-info">
            <%= flash.info %>
        </div>
        <% } %>
        <form action="/user/<%= user._id %>/edit" method="POST">
        <div class="form-group <%= typeof error != 'undefined' && error.username ? 'has-error' : '' %>">
            <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-user"></i>
            </span>
            <input type="text" name="username" class="form-control" placeholder="Username" value="<%= typeof user.username != 'undefined' && user.username ? user.username : '' %>">
            </div>
            <% if (typeof(error) != 'undefined' && error.username) { %>
            <label class="control-label"> <%= error.username %> </label>
            <% } %>
        </div>

        <div class="form-group <%= typeof error != 'undefined' && error.password ? 'has-error' : '' %>">
            <div class="input-group">
            <span class="input-group-addon">
                <i class="fa fa-lock"></i>
            </span>
            <input type="password" name="password" class="form-control" placeholder="Password">
            </div>
            <% if (typeof(error) != 'undefined' && error.password) { %>
            <label class="control-label"><%= error.password %></label>
            <% } %>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-block btn-success">Update</button>
        </div>
        </form>
        
        <% if(typeof loggedUser.role !== 'undefined' && (loggedUser.role === "BOSS" || loggedUser.role === "GOD")) { %>
        <form action="/user/<%= user._id %>/delete" method="post">
            <button type="submit" class="btn btn-block btn-danger">Delete</button>           
        </form>
        <% } %>

    </div>
</div>