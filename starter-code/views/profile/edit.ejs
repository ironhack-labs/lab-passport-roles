    crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

<div class="title-page">
    <h2>Edit your profile</h2>
</div>

<div class="d-flex justify-content-around">
    <form action="/profile/edit" method="POST" id="form">

        <label class="col-form-label">Username <input type="text" class="form-control" name="username" value="<%= profile.username %>"></label>

        <label class="col-form-label">Password <input type="password"  class="form-control" name="password" value="<%= profile.password %>"></label><br>

        <label class="col-form-label">Name <input type="text" class="form-control" name="name" value="<%= profile.name %>"></label>

        <label class="col-form-label">Family Name <input type="text" class="form-control" name="familyName" value="<%= profile.familyName %>"></label><br>


        <button type="submit" class="btn btn-primary">Update</button>

        <button class="btn btn-primary"><a href="/private"></a> go back</button>
    </form>
</div>