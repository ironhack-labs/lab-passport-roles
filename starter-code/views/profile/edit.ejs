<h1>Edit Profile</h1>

<form action="/" method="POST">
  Username: <input type="text" name="username" value="<%= user.username %>"></input>
  Name: <input type="text" name="name" value="<%= user.name %>"></input>
  Last name: <input type="text" name="familyName" value="<%= user.familyName %>"></input>
  Password: <input type="password" name="password" value=" "></input>
  Role: <input type="text" name="role" placeholder="Boss, Developer, TA.." value="<%= user.role %>"></input>

  <% if (typeof message != "undefined") { %>
   <div class="error-message"><%= message %></div>
  <% } %>

  <input type="submit" value="Edit"></input>
</form>
