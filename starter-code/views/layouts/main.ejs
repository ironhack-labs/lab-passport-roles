        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
            crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css"/>
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">
                        <img alt="Brand" src="/images/brand.png" width="50px" height="auto">
                    </a>
                </div>
                <div class="col-md-6">
                    <h2>Lab-passport-roles</h2>
                </div>


                <ul class="nav nav-pills">
                    <li><a href="/" class="navbar-right"><button type="button" class="btn btn-default navbar-btn">List Users</button></a></li>
                    <li><a href="/course" class="navbar-right"><button type="button" class="btn btn-default navbar-btn">List Courses</button></a></li>
                <% if(typeof loggedUser !== 'undefined') { %>  
                    <% if(loggedUser.role === "BOSS" || loggedUser.role === "GOD") { %>
                        <li><a href="/signup" class="navbar-right"><button type="button" class="btn btn-success navbar-btn">Create user</button></a></li> 
                    <% } %>
                    <% if(loggedUser.role === "TA" || loggedUser.role === "GOD") { %>
                        <li><a href="/course/new" class="navbar-right"><button type="button" class="btn btn-success navbar-btn">Create course</button></a></li> 
                    <% } %>
                        <li><a href="/logout" class="navbar-right"><button type="button" class="btn btn-primary navbar-btn">Log out</button></a></li>
                        </li><a href="/user/<%= loggedUser._id %>/profile" class="navbar-right"><h3><%= loggedUser.username %></h3></a>
                    </li>
                <% } %>
            </ul>


            </div>
        </nav>
     <%- body %>

