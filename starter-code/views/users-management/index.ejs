<div class="two-separated-cols">
	<h2>Users</h2>
	<a href="/users-management/new">New</a>
</div>
<% for(let i = 0; i < users.length ; i++) { %>
	<ul class="list-group">
		<li class="list-group-item"><h4>Username: <%= users[i].username %></h4></li>
		<li class="list-group-item"><h4>Name: <%= users[i].name %></h4></li>
		<li class="list-group-item"><h4>Family name: <%= users[i].familyName %></h4></li>
		<li class="list-group-item"><h4>Role: <%= users[i].role %></h4></li>
	</ul>
	<div class="links">
		<% if(users[i]._id.toString() != currentUser._id.toString()) { %>
			<a href="/users-management/<%= users[i]._id %>">Edit</a>
			<span>|</span>
		<% } %>
		<form action="/users-management/delete" method="POST">
			<input type="hidden" name="id" value="<%= users[i]._id %>" />
			<button type="submit" class="btn-link">Delete</button>
		</form>
	</div>
	<br><br><br>
<% } %>