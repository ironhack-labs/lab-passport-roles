<nav>
    <ul>
        <li><a href="/login">Login</a></li>
        <li><a class="prot-btn" href="/main">Main Account</a></li>
        <li><a class="logout-btn" href="/logout">Log out</a></li>
        {{#if user.role}}
            <li><a class="action-btn" href="/users/add">Add users</a></li>
        {{/if}}
        <li><a class="action-btn" href="/courses/add">Add courses</a></li>
    </ul>
</nav>
<main class="users-main">
    <h1 class="main-header">Welcome on your main account <span class="userName">{{ user.username }}</span>!</h1>

    {{#if user.role}}
        <h1 class="add-header">You are the boss of this company. That is why you have additional options for managing people in your company.</h1>
        <section id="employers">
            <h3 class="sub-header">Your company's team members</h3>
            <div class="employer-info employer-info--header">
                <p>NAME</p>
                <p>ROLE IN COMPANY</p>
                <div class="controls">
                   MANAGE PEOPLE
                </div>
            </div>
            {{#each  employers}}
                <div class="employer-info employer">
                    <p class="info-tab">{{ this.username }}</p>
                    <p class="info-tab">{{ this.role }}</p>
                    <div class="controls">
                        <a class="btn" href="/users/del/{{this._id}}" type="button">DELETE</a>
                        <a class="btn btn--warn" href="/users/up/{{this._id}}" type="button">UPDATE</a>
                    </div>
                </div>
            {{/each}}
        </section>
        {{else}}
        <h1 class="add-header">You can manage your accout here.</h1>
        <div class="controls--user">
            <a class="btn btn--warn" href="/users/up/{{user._id}}" type="button">UPDATE YOUR PROFILE</a>
        </div>
        <h2 class="add-header">You are employee in this company. You can see other's people accounts here.</h2>
        <section id="employers">
            <h3 class="sub-header">Your company's team members</h3>
            <div class="employer-info employer-info--header">
                <p>NAME</p>
                <p>ROLE IN COMPANY</p>
                <div class="controls">
                    MANAGE PEOPLE
                </div>
            </div>
            {{#each  employers}}
                <div class="employer-info employer">
                    <p class="info-tab">{{ this.username }}</p>
                    <p class="info-tab">{{ this.role }}</p>
                    <div class="controls">
                        <a class="btn btn--hide" href="/users/del/{{this._id}}" type="button">DELETE</a>
                        <a class="btn btn--warn btn--hide" href="/users/up/{{this._id}}" type="button">UPDATE</a>
                    </div>
                </div>
            {{/each}}
        </section>
    {{/if}}
    <br><br>
    <hr>
    <br>
        <h1 class="add-header">ALL THE COURSES PROVIDED BY OUR COMPANY.</h1>
        <h3 class="add-header">*Only TA can modify and add new courses*</h3>
        <section id="employers">
            <div class="employer-info employer-info--header">
                <p>TITLE</p>
                <p>DESCRIPTION</p>
                <p>LENGTH</p>
                <div class="controls">
                    MANAGE COURSES
                </div>
            </div>
            {{#each  courses}}
                <div class="employer-info employer">
                    <p class="info-tab">{{ this.title }}</p>
                    <p class="info-tab">{{ this.description }}</p>
                    <p class="info-tab">{{ this.length }}</p>
                    <div class="controls">
                        <a class="btn" href="/courses/del/{{this._id}}" type="button">DELETE</a>
                        <a class="btn btn--warn" href="/courses/up/{{this._id}}" type="button">UPDATE</a>
                    </div>
                </div>
            {{/each}}
        </section>
</main>

