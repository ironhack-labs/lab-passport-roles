<form id="form" action="/control/login" method="POST">
  <label for="username">Username</label>
  <br>
  <input type="text" name="username" placeholder="AnakinSkywalker">

  <br>
  <br>
  <label for="password">Password</label>
  <br>
  <input type="password" name="password" placeholder="DeathStar">
  <br>
  <br>

  <button type="submit">Log in!</button>
</form>
{{#if errorMessage}}
<div class="error-message">{{ errorMessage }}</div>
{{/if}}