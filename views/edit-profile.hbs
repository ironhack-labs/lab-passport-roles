<div>
    <a href="/logout"><h3>Logout</h3></a>
    <a href="/employee/home"><h3>Home</h3></a>
    <div>
        <h1>{{this.name}}</h1>
        <h2>{{this.username}}</h2>
        <h3>{{this.accessLevel}}</h3>
        {{#if this.email}}
            <h2>{{this.email}}</h2>
        {{/if}}
    </div>
    <div>
        <form action="/employee/edit/{{this._id}}" method="POST">
            <input type="text" name="name" placeholder="Digite o nome completo">
            {{!-- <input type="text" name="username" placeholder="Digite o nome de usuÃ¡rio"> --}}
            <input type="password" name="password" placeholder="Digite a senha">
            {{#unless this.email}}
                <input type="text" name="email" placeholder="Digite o email desejado">
            {{/unless }}
            <button type="submit">Alterar dados</button>
        </form>
    </div>

</div>