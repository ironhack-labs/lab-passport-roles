<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2 class="mb-5">Edit User </h2>

            <form class="mb-5" method="POST" action="/edit/{{_id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class=" form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{username}}">
                </div>
                <div class=" form-group">
                    <label>Password</label>
                    <input type="text" class="form-control" name="password" value="{{password}}">
                </div>
                <div class=" form-group">
                    <label>Role</label>
                    <input type="text" class="form-control" name="role" value="{{role}}">
                </div>

                <button type=" submit" class="btn btn-dark btn-block mt-5 ">Edit User</button>
            </form>
            <a class="mt-5 btn btn-outline-secondary" href="/">Go back</a>
        </div>
    </div>



</div>