<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Add new user</h1>

            <form action="/new" method="POST">
                <div class='form-group'>
                    <label for='name'>Name</label>
                    <input name='name' type='text' class='form-control' placeholder='Name' id='name'>
                </div>
                <div class='form-group'>
                    <label for='username'>Username</label>
                    <input name='username' type='text' class='form-control' placeholder='Username' id='username'>
                </div>
                <div class='form-group'>
                    <label for='password'>Password</label>
                    <input name='password' type='password' class='form-control' placeholder='******' id='password'>
                </div>

                <label for="inputRole">Roles</label>
                <select id="inputRole" class="form-control mb-5 ">
                    <option selected>Choose...</option>
                    <option name="BOSS">Boss</option>
                    <option name="EMPLOYEE">Employee</option>
                    <option name="TA">Teacher Assistant</option>
                    <option name="DEV">Developer</option>
                    <option name="GUEST">Guest</option>
                </select>

                <button type='submit' class='btn btn-success mt-5 btn-block'>Add User</button>

                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
            </form>

        </div>
    </div>
    <div class="row justify-content-center">
        <a class="mt-5 btn btn-outline-secondary" href="/">Go back to Index </a>
    </div>
</div>