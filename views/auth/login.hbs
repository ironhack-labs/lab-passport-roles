<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-4">

            <h1>Inicio de sesión</h1>
            <br>
            <hr>
            <br>

            <form action="/iniciar-sesion" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="userPwd">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Acceder</button>
            </form>

            {{#if errorMsg}}
            <p id="errorMessage">{{errorMsg}}</p>
            {{/if}}

            <hr>

            <p>¿No estás registrad@? <a href="/registro">Hazlo ahora</a>.</p>
            
        </div>
    </div>


</div>
