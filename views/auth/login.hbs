<section class="index-page">

    <div class="bg-blur d-flex justify-content-center align-items-center">

        <div class="welcome row">

            <div class="col-12 d-flex justify-content-center align-items-center top">

                <h1>Welcome</h1>

            </div>

            <div class="col-12 d-flex justify-content-around align-items-center bottom">

                <form action="/auth/login" method="POST">

                    <div class="form-group">

                        <label>Username</label>
                        <input type="text" class="form-control" name="username">

                    </div>

                    <div class="form-group">

                        <label>Password</label>
                        <input type="password" class="form-control" name="password">

                    </div>

                    <button type="submit" class="btn btn-dark">Log in</button>

                </form>


            </div>

            {{#if message}}

            <div class="col-12">

                <div class="alert alert-danger">{{message}}</div>

            </div>


            {{/if}}

        </div>

    </div>

</section>