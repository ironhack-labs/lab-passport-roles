<div class="row">
  <div class="col-md-m12 text-center my__header flex">
    <h2>Create users</h2>
  </div>
  <div class="col-md-12 text-center">
    <form action="/pass/createUsers" method="POST" id="form-container">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="UserName">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Password"> {{#if message}}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      <button type="submit" class="my__button">Create account</button>

      <a href="/pass/login"><p class="account-message">
        Do you already have an account?
      </p></a>
    </form>
  </div>
</div>
